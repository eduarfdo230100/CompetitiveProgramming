#include <bits/stdc++.h>
using namespace std;
int N,M;
int main() {
	string txt,pat;
	cin>>txt>>pat;
	N=txt.size();
	M=pat.size();
	vector<int> lps(M);
	int len=0,i=1;
	while(i<M){
		if(pat[i]==pat[len]){
			lps[i]=len+1;
			i++;
			len++;
		}
		else{
			if(len!=0) len=lps[len-1];
			else {
				lps[i]=0;
				i++;
			}
		}
	}
	int ans=0,j=0;
	i=0;
	while(i<N){
		if(pat[j]==txt[i]){
			i++;
			j++;
		}
		else{
			if(j!=0) j=lps[j-1];
			else i++;
		}
		if(j==M){
			ans++;
			j=lps[j-1];
		}
	}
	//NÃšMERO DE SUBSTRINGS pat CONTENIDOS EN txt
	cout<<ans;
	return 0;
}
