#include <bits/stdc++.h>
#define vi vector<int>
#define fore(i,a,b) for(int i=a;i<b;i++)
using namespace std;

int main() {
	string txt,pat,word;
	cin>>txt>>pat;
	int M=pat.size();
	word=pat+"$"+txt; //Se asume que el caracter '$' NO esta presente en txt ni pat
	int N=word.size(),L=0,R=0,ans=0;
	vi Z(N);
	fore(i,1,N){
		if(i>R){
			L=R=i;
			while(R<N and word[R]==word[R-L]) R++;
			Z[i]=R-L;
			R--;
		}
		else{
			int k=i-L;
			if(Z[k]+i<=R) Z[i]=Z[k];
			else{
				L=i;
				while(R<N and word[R]==word[R-L]) R++;
				Z[i]=R-L;
				R--;
			}
		}
		if(Z[i]==M) ans++;
	}
	cout<<ans;
	return 0;
}
