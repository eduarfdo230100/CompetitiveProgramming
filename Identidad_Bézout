#include <bits/stdc++.h>
using namespace std;
int A,B;
int bezout(int a,int b,int &x_0,int &y_0){
	if(b==0){
		x_0=1;
		y_0=0;
		return a;
	}
	int x_1,y_1,gcd;
	gcd=bezout(b,a%b,x_1,y_1);
	x_0=y_1;
	y_0=x_1-(a/b)*y_1;
	return gcd;
}
int main() {
	cin>>A>>B;
	//sea la ecuaci√≥n A*x+B*y=gcd(A,B) se determinan los x e y enteros 
	int x_0,y_0,gcd;
	gcd=bezout(A,B,x_0,y_0);
	cout<<gcd<<endl;
	for(int t=-10;t<=10;t++){
		cout<<x_0-(B*t)/gcd<<" "<<y_0+(A*t)/gcd<<endl;
	}
	return 0;
}
